{
  "framework": "mocha",
  "src_files": [
    "src/*.ts",
    "test/*.ts"
  ],
  "serve_files": [
    "test-out.js"
  ],
  "before_tests": "browserify -d test/index.ts -p [ tsify --noImplicitAny ] -o test-out.js; ts-node test/server.ts start 8182 &",
  "on_exit": "ts-node test/server.ts stop 8182; rm -f test-out.js",
  "proxies": {
    "/xhr": {
      "target": "http://localhost:8182/"
    }
  },
  "launchers": {
    "nodejs": {
      "command": "mocha -r ts-node/register test/index.ts -R tap",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [ "firefox", "chromium", "nodejs" ]
}
